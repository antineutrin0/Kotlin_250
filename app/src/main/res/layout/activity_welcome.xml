<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F1F1F1"
    android:gravity="center">

    <!-- App Icon with Badge -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_unary_logo"
            android:background="@drawable/rounded_purple_bg"
            android:padding="24dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/badge"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignTop="@id/app_icon"
            android:layout_alignEnd="@id/app_icon"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:padding="4dp"
            android:src="@drawable/ic_book"
            android:background="@drawable/circular_orange_bg" />

    </RelativeLayout>

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unary"
        android:textSize="48sp"
        android:textColor="#6A1B9A"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admission Preparation Platform"
        android:textSize="18sp"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Features Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="48dp"
        android:gravity="center">

        <!-- Interactive Courses -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_book_open"
                android:background="@drawable/circular_purple_light_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interactive\nCourses"
                android:textSize="14sp"
                android:textColor="#212121"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Expert Teachers -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_teacher"
                android:background="@drawable/circular_orange_light_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert Teachers"
                android:textSize="14sp"
                android:textColor="#212121"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Proven Results -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_trophy"
                android:background="@drawable/circular_green_light_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proven Results"
                android:textSize="14sp"
                android:textColor="#212121"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Sign Up"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/purple_gradient_button"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:drawablePadding="8dp"
        android:gravity="center" />

    <!-- Log In Button with orange gradient -->
    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Log In"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:drawablePadding="8dp"
        android:background="@drawable/purple_gradient_button" />

</LinearLayout>
