<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemAchievement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/achievement_item_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Title and Description -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">



        <!-- New Congratulations Message TextView -->
        <TextView
            android:id="@+id/achievementCongrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations!"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
        android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/achievementDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scored 10 out of 10 in ALL! 🎉"
            android:textSize="14sp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/achievementDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 28, 2025"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Trophy or Badge -->
    <TextView
        android:id="@+id/achievementBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏆"
        android:textSize="24sp"
        android:layout_marginStart="8dp" />
</LinearLayout>
