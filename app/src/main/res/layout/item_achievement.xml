<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemAchievement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/achievement_item_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Trophy Icon -->
    <ImageView
        android:id="@+id/achievementIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_achievement_trophy"
        android:layout_marginEnd="16dp" />

    <!-- Title and Description -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/achievementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/achievementDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievement description goes here"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Emoji or Badge -->
    <TextView
        android:id="@+id/achievementBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ†"
        android:textSize="24sp"
        android:layout_marginStart="8dp" />
</LinearLayout>
