<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tv_page_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Your Exam"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:gravity="center"
                android:layout_marginBottom="8dp" />


        </LinearLayout>

        <!-- Subject Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_subject_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Subject"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginBottom="16dp" />

            <Spinner
                android:id="@+id/spinner_subject"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:entries="@array/subject_options" />

        </LinearLayout>

        <!-- Marks Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_marks_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Marks"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/rg_marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_marks_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 Marks"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:padding="12dp"
                    android:background="@drawable/radio_button_background"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/rb_marks_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 Marks"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:padding="12dp"
                    android:background="@drawable/radio_button_background"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/rb_marks_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50 Marks"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:padding="12dp"
                    android:background="@drawable/radio_button_background" />

            </RadioGroup>

        </LinearLayout>



        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_start_exam"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Exam"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_gradient"
            android:layout_marginTop="16dp"
            style="?android:attr/borderlessButtonStyle"
            />


        <!-- Additional Info -->
        <TextView
            android:id="@+id/tv_exam_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make sure to select all options "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>